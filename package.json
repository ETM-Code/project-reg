{
    "name": "project-reg",
    "version": "1.0.0",
    "description": "An Electron-based chatbot using Gemini 2.0 flash with streaming, voice toggling, and integrated tools.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build:tailwind": "tailwindcss -i ./src/renderer/css/main.css -o ./src/renderer/css/output.css --watch",
        "build": "electron-builder"
    },
    "dependencies": {
        "@dqbd/tiktoken": "^1.0.0",
        "@google/genai": "^0.7.0",
        "axios": "^0.27.2",
        "dotenv": "^16.0.0",
        "elevenlabs": "^1.0.0",
        "googleapis": "^105.0.0",
        "openai": "^4.2.1",
        "tailwindcss": "^3.2.0",
        "tiktoken": "^1.0.20"
    },
    "devDependencies": {
        "electron": "^35.1.5",
        "electron-builder": "^26.0.12"
    },
    "build": {
        "files": [
            "main.js",
            "preload.js",
            "config.js",
            "dataInitializer.js",
            "src/**/*",
            "data/**/*",
            ".env"
        ],
        "directories": {
            "output": "dist"
        }
    }
}
