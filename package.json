{
    "name": "reg",
    "version": "1.0.0",
    "description": "A productivity AI chatbot",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build:tailwind": "tailwindcss -i ./src/renderer/css/main.css -o ./src/renderer/css/output.css --watch",
        "build": "electron-builder"
    },
    "dependencies": {
        "@dqbd/tiktoken": "^1.0.0",
        "@google/genai": "^0.7.0",
        "axios": "^0.27.2",
        "dotenv": "^16.0.0",
        "elevenlabs": "^1.0.0",
        "googleapis": "^105.0.0",
        "openai": "^4.2.1",
        "tailwindcss": "^3.2.0",
        "tiktoken": "^1.0.20",
        "pdf-parse": "^1.1.1",
        "mammoth": "^1.6.0",
        "xlsx": "^0.18.5",
        "rtf-parser": "^1.1.0",
        "electron-store": "^8.1.0"
    },
    "devDependencies": {
        "electron": "^35.1.5",
        "electron-builder": "^26.0.12"
    },
    "build": {
        "files": [
            "main.js",
            "preload.js",
            "config.js",
            "config.json",
            "dataInitializer.js",
            "src/**/*",
            "data/**/*",
            ".env",
            "!data/chats/**/*",
            "!data/token_usage/**/*",
            "!data/context/**/*"
        ],
        "directories": {
            "output": "dist"
        },
        "extraResources": [
            {
                "from": "data",
                "to": "data",
                "filter": ["**/*", "!chats/**/*", "!token_usage/**/*", "!context/**/*"]
            }
        ]
    }
}
